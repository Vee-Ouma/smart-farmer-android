<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/layout_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/qmui_s_list_item_bg_with_border_bottom_inset_left"
    android:clickable="true"
    android:focusable="true"
    android:padding="16dp">


    <CheckBox
        android:id="@+id/bottom_sheet_choose_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp" />

    <ImageView
        android:id="@+id/img_tag"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:visibility="visible" />


    <TextView
        android:id="@+id/txt_bottom_sheet_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/img_tag"
        tools:text="texttttttttttt" />

    <TextView
        android:id="@+id/txt_bottom_sheet_item_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txt_bottom_sheet_item_text"
        android:layout_below="@+id/txt_bottom_sheet_item_text"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="2dp"
        android:layout_toStartOf="@+id/bottom_sheet_choose_mark"
        android:textColor="@color/color_font_gray"
        android:textSize="12sp"
        android:visibility="visible"
        tools:text="desc" />
</RelativeLayout>